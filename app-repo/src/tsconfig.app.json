    "../node_modules/@rccl/folio/src/index.ts",
    "../node_modules/@rccl/folio/src/lib/components/folio/folio.component.ts",
    "../node_modules/@rccl/folio/src/lib/folio.module.ts",

    "../node_modules/@rccl/cruise-bookings/src/index.ts",
    "../node_modules/@rccl/cruise-bookings/src/lib/components/upcoming-cruises/upcoming-cruises.component.ts",
